# all colors are set here

# normal text is white
color normal white default

# header is red
color hdrdefault red default

# quoted text is green
color quoted green default

# signature is red
color signature red default

# message cursor
color indicator brightwhite magenta

# status line
color status cyan default

# thread arrows
color tree red default

# the plus sign newline marker
color markers red default

# MIME attachments
color attachment brightmagenta default

# search result in pager
color search yellow default

# messages in the index
color index brightgreen default '~C unwiredcouch'
color index brightgreen default '~C lordofhosts'
color index brightgreen default '~C schauenberg'
color index brightgreen default '~C mrtazz'

color index yellow default '~C nanog'
color index yellow default '~C logstash-users@googlegroups.com'
color index brightyellow default '~f github'
color index brightyellow default '~f distsys-discuss@googlegroups.com'
color index brightyellow default '~f devops@googlegroups.com'
color index brightyellow default '~f riemann-users@googlegroups.com'
color index brightyellow default '~f riak-users@lists.basho.com'

# tagged messages
color index magenta default ~T

# deleted messages
color index black yellow ~D

# add some solarized light inspired sidebar highlight colors
color sidebar_highlight white cyan
