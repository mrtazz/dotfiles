# set keybindings here

# delete messages with d
bind index d delete-message
bind pager d delete-message

# reply to message with r
bind index r reply

# fetch imap on G
bind index G imap-fetch-mail

# vi keys for scrolling in pager
bind pager k previous-line
bind pager j next-line
bind index k previous-entry
bind index j next-entry

# filtering macros
macro index,pager R "<save-message>=gtd-to-read/<enter><sync-mailbox>"
macro index,pager a "<enter-command>unset wait_key<enter><pipe-message>mutt-to-omnifocus.py <enter><save-message>=gtd-needs-reply/<enter><sync-mailbox>"
macro index,pager A "<save-message>=Archive/<enter><sync-mailbox>"
macro index Si "<change-folder>=INBOX/<enter>"
macro index Sr "<change-folder>=gtd-to-read/<enter>"
macro index Sa "<change-folder>=gtd-needs-reply/<enter>"
macro index SA "<change-folder>=Archive/<enter>"

# thread collapsing
bind index - collapse-thread
bind index _ collapse-all

# not much integration
# 'L' performs a notmuch query, showing only the results
macro index Ls "<enter-command>unset wait_key<enter><shell-escape>read -p 'notmuch query: ' x; echo \$x >~/.cache/mutt_terms<enter><limit>~i \"\`notmuch search --output=messages \$(cat ~/.cache/mutt_terms) | head -n 600 | perl -le '@a=<>;chomp@a;s/\^id:// for@a;$,=\"|\";print@a'\`\"<enter>" "show only messages matching a notmuch pattern"
# 'a' shows all messages again (supersedes default <alias> binding)
macro index La "<limit>all\n" "show all messages (undo limit)"
macro index,pager "<esc>o" "<enter-command>unset wait_key<enter><pipe-message>mutt-to-omnifocus.py <enter>" \ "Create OmniFocus task from message"
